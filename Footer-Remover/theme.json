{
  "name": "Footer Remover",
  "version": "v1.0",
  "author": "GrodanBool",
  "target": "Tweak",
  "description": "Removes the footer, also known as the bottom menu on the Steam Deck.",
  "inject": {
    "shared.css": [ "SP" ]
  },
  "manifest_version": 3,
  "patches": {
    "Switch-Like-Home-Patch": {
      "default": "No",
      "type": "checkbox",
      "values": {
        "No": {},
        "Yes": {
          "switch-like-home-patch.css": [ "SP" ]
        }
      }
    }
  }
}
