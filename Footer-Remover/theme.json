{
  "name": "Footer Editor",
  "version": "v1.0",
  "author": "GrodanBool",
  "target": "System-Wide",
  "description": "Allows the user to edit the footer, also known as the bottom menu on the Steam Deck.",
  "inject": {
    "shared.css": [ "SP" ]
  },
  "manifest_version": 3,
  "patches": {
    "Opacity": {
      "default": "1",
      "type": "slider",
      "values": {
        "0": { "opacity/0.css": [ "SP" ] },
        "0.2": { "opacity/0.2.css": [ "SP" ] },
        "0.4": { "opacity/0.4.css": [ "SP" ] },
        "0.6": { "opacity/0.6.css": [ "SP" ] },
        "0.8": { "opacity/0.8.css": [ "SP" ] },
        "1": { "opacity/1.css": [ "SP" ] }
      }
    },
    "Clean Gameview Patch": {
      "default": "None",
      "type": "dropdown",
      "values": {
        "None": {},
        "Clean Gameview": {
          "clean-gameview-patch.css": [ "SP", "MainMenu", "QuickAccess" ]
        },
        "Clean Gameview Cloud": {
          "clean-gameview-cloud-patch.css": [ "SP", "MainMenu", "QuickAccess" ]
        }
      }
    },
    "Switch Like Home Patch": {
      "default": "No",
      "type": "checkbox",
      "values": {
        "No": {},
        "Yes": {
          "switch-like-home-patch.css": [ "SP" ]
        }
      }
    },
    "Remove Footer": {
      "default": "No",
      "type": "checkbox",
      "values": {
        "No": {},
        "Yes": {
          "remove.css": [ "SP" ]
        }
      }
    }
  }
}
